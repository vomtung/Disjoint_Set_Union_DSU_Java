<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.advancedalgorithms.asigment.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" style="-fx-text-fill: red;-fx-font-size: 16px;" text="Welcome to JavaFX Application!"/>

    <TextArea fx:id="inputTA" maxHeight="20"/>
    <HBox>
        <Button text="Init value!" onAction="#onHelloButtonClick">
            <HBox.margin>
                <Insets>
                    <right>10</right>
                </Insets>
            </HBox.margin>
        </Button>
        <Button text="Union!" onAction="#onUnionButtonClick">
            <HBox.margin>
                <Insets>
                    <right>10</right>
                </Insets>
            </HBox.margin>
        </Button>
        <Button text="Same Tree!" onAction="#onSameTreeButtonClick"/>
    </HBox>

    <TextArea fx:id="outPutTA" maxHeight="50"/>
    <HBox>
        <Label fx:id="speedLabel" style="-fx-text-fill: green;-fx-font-size: 24px;" text="Speed">
            <HBox.margin>
                <Insets>
                    <right>10</right>
                </Insets>
            </HBox.margin>
        </Label>
        <Label fx:id="speedvalueLabel" style="-fx-text-fill: red;-fx-font-size: 24px;" text="0">
            <HBox.margin>
                <Insets>
                    <right>10</right>
                </Insets>
            </HBox.margin>
        </Label>
        <Label fx:id="secondLabel" style="-fx-text-fill: green;-fx-font-size: 24px;" text="Millisecond">

        </Label>
    </HBox>


</VBox>
